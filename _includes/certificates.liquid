<div class="col">
  <div class="card h-100 hoverable">
    <div class="card-body">
      <h2 class="card-title">{{ cert.title }}</h2>
      <p class="card-text">{{ cert.description }}</p>
      {% if cert.items %}
        <ul>
          {% for item in cert.items %}
            <li>{{ item }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>
</div>
